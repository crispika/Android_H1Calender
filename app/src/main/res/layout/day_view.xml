<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_view"
    android:layout_width="0dp"
    android:layout_height="@dimen/calendarview_weekitem"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayview_month_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/dayview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/dayview_circle_selected"
            android:layout_width="@dimen/calendarview_circleSize"
            android:layout_height="@dimen/calendarview_circleSize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dayview_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>